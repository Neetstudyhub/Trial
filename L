  <!-- JavaScript for Load More -->
<!-- Add this just before the closing </body> tag -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = Array.from(document.querySelectorAll('.card'));
    const loadMoreButton = document.getElementById('load-more');
    const loadingSpinner = document.getElementById('loading-spinner');

    let visibleCards = 6;

    // Initially hide all cards beyond the first 6
    cards.forEach((card, index) => {
      if (index >= visibleCards) {
        card.style.display = 'none';
      }
    });

    function loadMorePosts() {
      loadingSpinner.style.display = 'block'; // Show spinner

      setTimeout(() => {
        let loadedCount = 0;

        // Loop through the hidden cards and display the next 6
        for (let i = visibleCards; i < cards.length && loadedCount < 6; i++) {
          if (cards[i].style.display === 'none') {
            cards[i].style.display = 'block';
            loadedCount++;
          }
        }

        visibleCards += loadedCount; // Update the count of visible cards
        loadingSpinner.style.display = 'none'; // Hide spinner

        // Hide the "Load More" button if all cards are visible
        if (visibleCards >= cards.length) {
          loadMoreButton.style.display = 'none';
        }
      }, 1000); // Simulate loading delay
    }

    // Attach event listener to the "Load More" button
    loadMoreButton.addEventListener('click', loadMorePosts);
  });

</script>
